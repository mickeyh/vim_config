snippet snip "Snippet definition" !
`echo snippet` ${1:trigger} "${2:description}" ${3:!b}
$0
`echo endsnippet`
endsnippet

snippet global "Global snippet definition" !
`echo global` !p
$0
`echo endglobal`
endsnippet

snippet vis "${VISUAL}" i
\$\{VISUAL:${1:${2:default}${3:/transform/}}\}
endsnippet

